<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ll_grd_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_40sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_30sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="#ffd9b4"
    >

    <!--on below line we are creating
        a linear layout for grid view item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border_back_lms"
        android:paddingStart="@dimen/_7sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/circle_lms">

            <ImageView
                android:id="@+id/iv_gv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:src="@drawable/topic_icon_lms"/>

        </LinearLayout>



        <TextView
            android:id="@+id/tv_Search_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nxtlms"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_15sdp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>
