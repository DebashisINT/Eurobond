<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_1sdp"
    android:orientation="horizontal"
    android:background="#dde7f1"
    android:id="@+id/main_const"
    tools:context=".features.leaderboard.LeaderBoardFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/constraintLayoutBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backwhite_round_corner_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/bt_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:text=""
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/bt_own"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="@dimen/_19sdp"
                    android:paddingEnd="@dimen/_19sdp"
                    app:layout_constraintStart_toEndOf="@+id/bt_overall"
                    app:layout_constraintTop_toTopOf="parent"></TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/ic_dashboard_filter_floating_icon"
                android:tint="#160f53"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_filter_red"
                android:tint="@color/color_star_leader"
                app:layout_constraintBottom_toBottomOf="@+id/iv_filter"
                app:layout_constraintEnd_toEndOf="@+id/iv_filter"
                app:layout_constraintStart_toStartOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="@+id/iv_filter" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/second_half"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_half">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:layout_marginStart="@dimen/_12sdp"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginStart="@dimen/_32sdp"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Employees(10)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_leaderboard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view4">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/own_part_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/leaderbackground"
                android:paddingBottom="@dimen/_15sdp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <!--
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_185sdp"
                    android:src="@drawable/leaderbackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
-->

                <ImageView
                    android:id="@+id/iv_ownimg"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:src="@drawable/baseline_account_circle_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ownrank"
                    tools:layout_editor_absoluteY="26dp" />

                <TextView
                    android:id="@+id/tv_ownname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Puja Basak Dhar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <ImageView
                    android:id="@+id/iv_ownimg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ownname" />

                <TextView
                    android:id="@+id/tv_ownscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="26480"
                    android:textColor="@color/color_star_leader"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_ownimg2"
                    app:layout_constraintStart_toEndOf="@+id/iv_ownimg2"
                    app:layout_constraintTop_toTopOf="@+id/iv_ownimg2" />


                <TextView
                    android:id="@+id/tv_ownrank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#220"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_ownimg"
                    app:layout_constraintStart_toStartOf="@+id/iv_ownimg"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_36sdp"
                    android:src="@drawable/first_icon"
                    app:layout_constraintEnd_toEndOf="@+id/iv_ownimg"
                    app:layout_constraintStart_toStartOf="@+id/iv_ownimg"
                    app:layout_constraintTop_toTopOf="@+id/iv_ownimg" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_own"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/own_part_back">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/_10sdp">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Here is the break up of your earned rating"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewAtten"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <ImageView
                            android:id="@+id/iv_atten"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/attendance"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAtten"
                            app:layout_constraintStart_toStartOf="@+id/viewAtten"
                            app:layout_constraintTop_toTopOf="@+id/viewAtten" />

                        <TextView
                            android:id="@+id/tv_atten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Attendance"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_atten"
                            app:layout_constraintTop_toTopOf="@+id/iv_atten" />

                        <ImageView
                            android:id="@+id/iv_starAtten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAtten"
                            app:layout_constraintEnd_toStartOf="@+id/tv_totalscore"
                            app:layout_constraintTop_toTopOf="@+id/viewAtten"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="6620"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starAtten"
                            app:layout_constraintEnd_toEndOf="@+id/viewAtten"
                            app:layout_constraintTop_toTopOf="@+id/iv_starAtten" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewVisit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewAtten">

                        <ImageView
                            android:id="@+id/iv_visit"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/visit"
                            app:layout_constraintBottom_toBottomOf="@+id/viewVisit"
                            app:layout_constraintStart_toStartOf="@+id/viewVisit"
                            app:layout_constraintTop_toTopOf="@+id/viewVisit" />

                        <TextView
                            android:id="@+id/tv_visit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Visits"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_visit"
                            app:layout_constraintEnd_toStartOf="@+id/iv_starVisit"
                            app:layout_constraintStart_toEndOf="@+id/iv_visit"
                            app:layout_constraintTop_toTopOf="@+id/iv_visit" />

                        <ImageView
                            android:id="@+id/iv_starVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewVisit"
                            app:layout_constraintEnd_toStartOf="@+id/tv_totalscoreV"
                            app:layout_constraintTop_toTopOf="@+id/viewVisit"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="6620"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starVisit"
                            app:layout_constraintEnd_toEndOf="@+id/viewVisit"
                            app:layout_constraintTop_toTopOf="@+id/iv_starVisit" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewOrder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewVisit">

                        <ImageView
                            android:id="@+id/iv_order"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/order"
                            app:layout_constraintBottom_toBottomOf="@+id/viewOrder"
                            app:layout_constraintStart_toStartOf="@+id/viewOrder"
                            app:layout_constraintTop_toTopOf="@+id/viewOrder" />

                        <TextView
                            android:id="@+id/tv_order"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Order"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_order"
                            app:layout_constraintEnd_toStartOf="@+id/iv_starOrder"
                            app:layout_constraintStart_toEndOf="@+id/iv_order"
                            app:layout_constraintTop_toTopOf="@+id/iv_order" />

                        <ImageView
                            android:id="@+id/iv_starOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewOrder"
                            app:layout_constraintEnd_toStartOf="@+id/tv_totalscoreOr"
                            app:layout_constraintTop_toTopOf="@+id/viewOrder"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreOr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="6620"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starOrder"
                            app:layout_constraintEnd_toEndOf="@+id/viewOrder"
                            app:layout_constraintTop_toTopOf="@+id/iv_starOrder" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewcollection"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewOrder">

                        <ImageView
                            android:id="@+id/iv_collection"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/collection"
                            app:layout_constraintBottom_toBottomOf="@+id/viewcollection"
                            app:layout_constraintStart_toStartOf="@+id/viewcollection"
                            app:layout_constraintTop_toTopOf="@+id/viewcollection" />

                        <TextView
                            android:id="@+id/tv_collection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Collection"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_collection"
                            app:layout_constraintEnd_toStartOf="@+id/iv_starcollection"
                            app:layout_constraintStart_toEndOf="@+id/iv_collection"
                            app:layout_constraintTop_toTopOf="@+id/iv_collection" />

                        <ImageView
                            android:id="@+id/iv_starcollection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewcollection"
                            app:layout_constraintEnd_toStartOf="@+id/tv_totalscoreCollec"
                            app:layout_constraintTop_toTopOf="@+id/viewcollection"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreCollec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="6620"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starcollection"
                            app:layout_constraintEnd_toEndOf="@+id/viewcollection"
                            app:layout_constraintTop_toTopOf="@+id/iv_starcollection" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:visibility="visible"
                        android:id="@+id/viewActitivies"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewcollection">

                        <ImageView
                            android:id="@+id/iv_activities"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/activities"
                            app:layout_constraintBottom_toBottomOf="@+id/viewActitivies"
                            app:layout_constraintStart_toStartOf="@+id/viewActitivies"
                            app:layout_constraintTop_toTopOf="@+id/viewActitivies" />

                        <TextView
                            android:id="@+id/tv_activities"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Activities"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_activities"
                            app:layout_constraintEnd_toStartOf="@+id/iv_starActivities"
                            app:layout_constraintStart_toEndOf="@+id/iv_activities"
                            app:layout_constraintTop_toTopOf="@+id/iv_activities" />

                        <ImageView
                            android:id="@+id/iv_starActivities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewActitivies"
                            app:layout_constraintEnd_toStartOf="@+id/tv_totalscoreActivities"
                            app:layout_constraintTop_toTopOf="@+id/viewActitivies"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreActivities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="6620"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starActivities"
                            app:layout_constraintEnd_toEndOf="@+id/viewActitivies"
                            app:layout_constraintTop_toTopOf="@+id/iv_starActivities" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel_frag_leaderboard"
        wheel:matProg_barColor="#1A8BA6"
        wheel:matProg_progressIndeterminate="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />
    <TextView
        android:visibility="gone"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_nointernet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17sdp"

        android:text="@string/no_internet"
        app:layout_constraintBottom_toBottomOf="parent"
